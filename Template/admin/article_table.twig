{% extends "/admin/layout.twig" %}
{% block content %}
{% for article in articles %}
<div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">DataTables Article</h6>
        </div>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>IMG</th>
                    <th>Href</th>
                    <th>Start date</th>
                    <th>Salary</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>IMG</th>
                    <th>Href</th>
                    <th>Start date</th>
                    <th>Salary</th>
                </tr>
            </tfoot>
            <tbody>
                <tr>
                    <td {{ article.id }}>{{ article.name }}</td>
                    <td {{ article.category_id }}>{{ category }}</td>
                    <td>Edinburgh</td>
                    <td>61</td>
                    <td>2011/04/25</td>
                    <td>$320,800</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
</div>

</div>
<!-- /.container-fluid -->
{% endfor %}
{% endblock %}

